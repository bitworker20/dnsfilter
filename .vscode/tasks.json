{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "make",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "${workspaceFolder}/dnsfilter.cpp",
                "-o",
                "${workspaceFolder}/dnsfilter",
                "-pthread"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
